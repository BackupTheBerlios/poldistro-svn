use uo;

include "include/messages";
include "include/localization";


program command_ip(who)
	var mobile;

	SendMessage(who, MSG_TARGET_CHAR, {}, MSG_COMMAND);

	if ((mobile := Target(who, TGTOPT_NOCHECK_LOS)) == 0)
		SendMessage(who, MSG_CANCELLED, {}, MSG_COMMAND);
		return;
	endif

	if (!mobile.ip)
		SendMessage(who, MSG_NO_CHAR, {}, MSG_COMMAND);
		return;
	endif

	SendSysMessage(who, "IP: " + CStr(mobile.ip));

	return;
endprogram
