        0xe40:
            targetfurniture.graphic := 0xe41;   // Metal chest, gold lining
        0xe41:
            targetfurniture.graphic := 0xe40;
        0xe42:
            targetfurniture.graphic := 0xe43;   // Wooden chest
        0xe43:
