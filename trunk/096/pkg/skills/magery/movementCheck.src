use uo;
use os;

program MovementChecker(params)
	var who := params[1];
	var spell_starter := GetProcess(params[2]);
	var orig_x := params[3];
	var orig_y := params[4];
	params := 0; // not needed anymore
	
	while ( spell_starter.pid )
		if ( who.x != orig_x || who.y != orig_y )
			spell_starter.SendEvent("moved");
			return 1;
		endif
		sleepms(50);
	endwhile
	
	return 1;
endprogram
