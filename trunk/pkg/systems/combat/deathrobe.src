    if((item.movable == 1) && (!item.container) && !((item.x == 0) && (item.y == 0) && (item.z == 0)))
      sleep(10);
      if((item.movable == 1) && (!item.container) && !((item.x == 0) && (item.y == 0) && (item.z == 0)))
        DestroyItem(item);
        break;
      endif
    endif
    sleep(30);
  endwhile
endprogram
