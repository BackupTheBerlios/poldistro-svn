use uo;

program  textcmd_cx(who, howfar)
  var what := Target(who, TGTOPT_NOCHECK_LOS);
  var newitem;
  if(!what)
    return;
  endif
  var tdist;
  if(howfar == "")
    tdist := 1;
  else
    tdist := CInt(howfar);
  endif
  
  newitem := CreateItemAtLocation(what.x + tdist, what.y, what.z, what.objtype, 1, who.realm);
  newitem.movable := 0;
endprogram